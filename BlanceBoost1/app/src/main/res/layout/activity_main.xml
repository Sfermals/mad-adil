<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/balanceboost1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Heading -->
    <TextView
        android:id="@+id/mainHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your ultimate destination for fitness and nutrition. Share your journey. Join our vibrant community!"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/logoImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome! Please select the button below to explore our fitness and diet programs, and join our vibrant community."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/mainHeading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fitness Button -->
    <Button
        android:id="@+id/fitnessButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fitness and Exercise"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nutrition Button -->
    <Button
        android:id="@+id/nutritionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nutrition and Diet"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/fitnessButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Wellness Button -->
    <Button
        android:id="@+id/wellnessButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="General Wellness"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/nutritionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Motivational Quote -->
    <TextView
        android:id="@+id/motivationalQuote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="“You are never too old to set another goal or to dream a new dream.”"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/wellnessButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
